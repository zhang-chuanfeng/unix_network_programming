DIRS = lib
ROOT = .

include ./Make.defines

*: $@

%:	%.c $(LIBUNP)
	$(CC) $(CFLAGS) $@.c -o $@ $(LDFLAGS) $(LDLIBS)

clean:
	for i in $(DIRS); do \
		(cd $$i && echo "cleaning $$i" && $(MAKE) clean) || exit 1; \
	done  && \
	rm -f $(CLEANFILES) \


 
distclean:
	for i in $(DIRS); do \
		(cd $$i && echo "cleaning $$i" && $(MAKE) clean) || exit 1; \
	done  && \
	rm -f config.cache config.log config.status config.h Make.defines Makefile

include $(ROOT)/Make.libunp.inc